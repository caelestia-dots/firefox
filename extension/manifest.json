{
    "manifest_version": 2,
    "name": "CaelestiaFox",
    "version": "1.0",
    "description": "A Firefox theme with dynamic colours from my caelestia dotfiles.",
    "browser_specific_settings": {
        "gecko": {
            "id": "caelestiafox@caelestia.org"
        }
    },
    "background": {
        "scripts": ["dist/extension.js"]
    },
    "permissions": ["nativeMessaging", "theme"]
}
